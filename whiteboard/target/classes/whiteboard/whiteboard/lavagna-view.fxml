                  </ColorPicker>
                  <Spinner fx:id="grandezzaLinea" layoutX="8.0" layoutY="78.0" prefHeight="26.0" prefWidth="70.0" style="-fx-background-color: E9EEF4; -fx-border-color: E9EEF4; -fx-border-width: 1.5; -fx-background-radius: 12; -fx-border-radius: 5;" />
               </children></AnchorPane>
            <AnchorPane fx:id="gommaBox" disable="true" layoutY="124.0" prefHeight="330.0" prefWidth="82.0" style="-fx-border-color: E9EEF4; -fx-border-width: 1.5px; -fx-border-radius: 12px;" visible="false">
               <children>
                  <Spinner fx:id="grandezzaGomma" layoutX="8.0" layoutY="21.0" prefHeight="26.0" prefWidth="70.0" style="-fx-background-color: E9EEF4; -fx-border-color: E9EEF4; -fx-border-width: 1.5; -fx-background-radius: 12; -fx-border-radius: 5;" />
               </children>
            </AnchorPane>
         </children>
      </AnchorPane>
   </center>

</BorderPane>
