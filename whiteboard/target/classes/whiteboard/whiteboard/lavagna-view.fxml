                  <ColorPicker fx:id="colorPicker" layoutX="4.0" layoutY="21.0" prefHeight="40.0" prefWidth="80.0" style="-fx-background-color: E9EEF4; -fx-border-color: E9EEF4; -fx-border-radius: 12px; -fx-background-radius: 12px;">
